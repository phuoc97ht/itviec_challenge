<%= turbo_frame_tag "first_turbo_frame" do %>
<p style="color: green"><%= notice %></p>

<h1>Jobs</h1>

<div id="new_job">
  <%= render partial: "jobs/form", locals: {job: Job.new } %>
</div>

<%= link_to "New job", new_job_path %>
<% end %>

<div id="jobs">
  <% @jobs.each do |job| %>
    <%= render job %>
    <p>
      <%= link_to "Show this job", job %>
    </p>
  <% end %>
</div>